        <%= simple_form_for(@restaurant) do |f| %>
        <% if @restaurant.errors.any? %>
          <ul>
            <% @restaurant.errors.full_messages.each do |message| %>
            <li>
              <%= message %>
            </li>
            <% end %>
          </ul>
        <% end %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :tag_list %>
          <%= f.input :tag_list %>
          <%= f.input :tag_list %>
      </div>
      <div class="form-actions">
          <%= f.submit class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
